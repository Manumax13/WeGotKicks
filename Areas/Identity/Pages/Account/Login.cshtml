@page
@model LoginModel

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>


    <body>

    <div class="container-fluid ">

        <div class="row contenedor-total">
            <div class="col-md-7 parte-imagen">
                <br><br><br><br><br><br><br><br><br><br><br><br><br>
                <iframe style="border-radius:100px" src="https://open.spotify.com/embed/track/17WYuBYhqzliC0CnR46C4b?utm_
                source=generator&theme=0" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; 
                clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
            </div>
            <div class="col-md-5 parte-login">

                <div class="row mt-5">
                    <div class="col col-md-12"></div>
                </div>

                <div class="row mt-4">
                    <div class="col col-md-2"></div>
                    <div class="col col-md-8">
                        <h1>Inicio de Sesión</h1>
                    </div>
                    <div class="col col-md-2"></div>
                </div>

                <div class="row mt-3">
                    <div class="col col-md-2"></div>
                    <div class="col col-md-8">
                        <p>Bienvenido Nuevamente! Por favor inicia sesión con tu cuenta.</p>
                    </div>
                    <div class="col col-md-2"></div>
                </div>

                <form id="account" method="post" class="formulario">

                    <div class="row mt-4">
                        <div class="col col-md-2"></div>
                        <div class="col col-md-8">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <label asp-for="Input.Email" class="form-label"></label>
                            <div class="form-floating" >
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col col-md-2"></div>
                    </div>

                    <div class="row mt-4">
                        <div class="col col-md-2"></div>
                        <div class="col col-md-8">
                                <label asp-for="Input.Password" class="form-label"></label>
                            <div class="form-floating" >
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col col-md-2"></div>
                    </div>

                    <div class="row mt-4">
                        <div class="col col-md-2"></div>
                        <div class="col col-md-4">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label" >
                                <input class="form-check-input" asp-for="Input.RememberMe"  />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>

                        <div class="col col-md-4">
                            <a id="forgot-password" asp-page="./ForgotPassword" >¿Olvidaste tu Contraseña?</a>
                        </div>
                        <div class="col col-md-2"></div>
                    </div>

                    <div class="row mt-4">
                        <div class="col col-md-2"></div>
                        <div class="col col-md-8">
                            <div class="btn-login-container">
                                <button id="login-submit" type="submit" class="w-100 btn btn-lg" >Ingresar</button>
                            </div>
                        </div>
                        <div class="col col-md-2"></div>
                    </div>

                    <div class="row mt-4 mt-5">
                        <div class="col col-md-2"></div>
                        <div class="col col-md-8">
                            <a id="newUser" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Usuario Nuevo? <b>Registrarse</b></a>
                        </div>
                        <div class="col col-md-2"></div>
                    </div>

                </form>

            </div>
        </div>

    </div>
    

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/64b57b2524.js" crossorigin="anonymous"></script>
    </body>





</html>