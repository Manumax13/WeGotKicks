@model IEnumerable<WeGotKicks.Models.Producto>
<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="~/css/pago.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Rajdhani&family=Sacramento&display=swap" rel="stylesheet">
  <title>Contacto</title>
</head>

<body class="cuerpo">
  <div class="titulo">
    <p class="titulo-texto">Detalle del Pago</p>
  </div>

  <div class="alert alert-success rounded-pill" role="alert">
    Se completo el pago exitosamente, Gracias por su Preferencia en WeGotKicks
  </div>

  <div>
    <h1 class="titulo-lista">Productos que estuvieron en su compra</h1>
  </div>

  <div class="container">
    <h1>@ViewData["Message"]</h1>
    <div class="row">
      <div class="col">
        <div id="products" class="mb-3">
          <div class="row">
            @foreach (var item in Model)
            {
              <div class="col-sm-4">
                <div class="card mb-3 text-center" style="border: white 4px solid; border-radius: 30px;">
                  <div class="card-header"
                  style="background-color: #E38B29; border-bottom: white 4px solid; border-radius: 30px 30px 0px 0px;">
                    <p style="margin: 5px 0; font-family: 'Rajdhani', sans-serif; font-size: 24px; font-weight: bold; 
                  color: white;">@Html.DisplayFor(modelItem => item.Name)</p>
                  </div>
                  <div class="card-body" style="background-color: #FFD8A9; border-radius: 0px 0px 30px 30px;">
                    <img class="img-responsive" style="border-radius: 30px; margin-top: 5px; background-size: cover;"
                    width="350" height="250" src="/Images/@item.ImageName" alt="@item.ImageName" />
                    <p class="card-text" style="margin-top: 15px; font-family: 'Rajdhani', sans-serif; font-size: 20px; font-weight: bold; 
                  color: #ffa500;">Precio: S/. @Html.DisplayFor(modelItem => item.Precio)</p>
                  </div>
                </div>
              </div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>

</body>

<script src="https://kit.fontawesome.com/42be4397d3.js" crossorigin="anonymous"></script>

</html>