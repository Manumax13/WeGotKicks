@model dynamic;
@using System.Collections.Generic;

@{
    IEnumerable<WeGotKicks.Models.Proforma> listItemsCarrito = new List<Proforma>();
    listItemsCarrito = @Model.elementosCarrito;
    Decimal montoTotal = @Model.montoTotal;
}

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="~/css/pedido.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani&family=Sacramento&display=swap" rel="stylesheet">
</head>


<body >

    <div class="container-fluid">
        <div class="row">
            <div class="col col-md-12"><h1 class="titulo" style="text-align: center;">Detalles del Carrito</h1></div>
        </div>
        <div class="row mt-2">
            <div class="col col-md-1"></div>
            <div class="col col-md-10">
                 <table class="table table-striped table-hover" style="border-radius: 40px; padding: 0 1rem; border: 2px #3d3d3d solid;margin: 0 auto; width:80%;">
        <thead>
            <tr style="background: #8d939b;">
                <th>@Html.DisplayNameFor(model => listItemsCarrito.FirstOrDefault().Producto.Name)</th>
                <th>@Html.DisplayNameFor(model => listItemsCarrito.FirstOrDefault().Cantidad)</th>
                <th>@Html.DisplayNameFor(model => listItemsCarrito.FirstOrDefault().Precio)</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Proforma item in Model.elementosCarrito)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Producto.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                    <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                    <td>
                        <a class="boton-1" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen"></i></a>
                        <a class="boton-3" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
            </div>
            <div class="col col-md-1"></div>
        </div>
        <div class="row">
            <div class="col"></div>
            <div class="col">
                <div class="row">
                    <div class="col col-md-12 mt-4" >
                        <p class="total" style="text-align: center;">Monto Total: S/. @montoTotal</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-md-12 mt-2" style="text-align: center;">
                        <a class="boton" asp-controller="Pago" asp-action="Create" asp-route-monto="@montoTotal" style="border: 3px solid #585858;padding: 10px;background-color: #4b4a4a;color: #ffffff;border-radius: 30px;">Ir a Pagar</a>
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>

</body>

<script src="https://kit.fontawesome.com/42be4397d3.js" crossorigin="anonymous"></script>


</html>